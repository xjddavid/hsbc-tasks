version: '2'

services:
  mysql:
    image: mysql
    ports:
      - "3306:3306"
    container_name: mysql
    volumes:
      - ./data/mysql:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: "123456"
    restart: always
  tasks:
    build:
      context: ../
      dockerfile: ./docker/dockerfile
    ports:
      - "8080:8080"
    depends_on:
      - mysql
